<table class="table table-striped">
 <thead>
   <tr>
     <th>
       Nome:
     </th>
     <th>
       Origem:
     </th>
     <th>
       Quantidade média ingerida:
     </th>
     <th>
       Forma de ingestão:
     </th>
     <th>
       Efeitos a curto prazo (quantidade média):
     </th>
     <th>
       Duração:
     </th>
     <th>
       Efeitos a curto prazo (grandes quantidades):
     </th>
     <th>
       Risco de dependência psicológica:
     </th>
     <th>
       Risco de dependência física:
     </th>
     <th>
       Tolerância:
     </th>
     <th>
       Efeitos a longo prazo:
     </th>
     <th>
       Utilização médica:
     </th>
   </tr>
</thead>
<tbody>
  <% @antidepressants.each do |antidepressant| %>
  <tr>
    <td><%= antidepressant.name %></td>
    <td><%= antidepressant.origin %></td>
    <td><%= antidepressant.average_ingest %></td>
    <td><%= antidepressant.ingestion_form %></td>
    <td><%= antidepressant.effect_average %></td>
    <td><%= antidepressant.effect_high %></td>
    <td><%= antidepressant.dependence_psychological %></td>
    <td><%= antidepressant.dependence_phisical %></td>
    <td><%= antidepressant.tolerance %></td>
    <td><%= antidepressant.high_term %></td>
    <td><%= antidepressant.long_effects %></td>
    <td><%= antidepressant.medical_use %></td>
  </tr>
 <% end %>
</tbody>
</table>
